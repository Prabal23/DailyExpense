<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:left=".5dp"
        android:right=".5dp"
        android:top=".5dp"
        android:bottom=".5dp">
        <shape android:shape="rectangle">
            <solid android:color="#dedede"/>
            <corners
                android:radius="20dp"/>
        </shape>
    </item>

    <item
        android:left="1dp"
        android:right="1dp"
        android:top=".5dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#f4f5f5"/>
            <corners
                android:radius="20dp"/>
        </shape>
    </item>

</layer-list>